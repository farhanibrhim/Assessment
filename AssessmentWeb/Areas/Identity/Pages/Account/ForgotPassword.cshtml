@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url('/images/background.jpg');
        background-size: cover;
        height: 100vh;
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center" style="padding-top: 3rem;">
    <div class="card shadow border-0 mt-4" style="max-width: 1000px;">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <h1 style="text-align: center">Forgot your password ?</h1>
                        <br />
                        <h5>Enter your email.</h5>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg text-white" style="background-color: #D40511; font-weight:bold">Reset Password</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>             
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
